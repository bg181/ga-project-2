<h3>restaurants</h3>

<% @restaurants.each do |restaurant| %>
  <div class="restaurant">
    <%= restaurant.name %>
    <%= link_to "Show all bookings", restaurant_bookings_path(restaurant) %>
    <%= link_to "Delete", restaurant_path(restaurant), data: { confirm: 'Are you sure?' }, method: :delete %>
    <%= link_to "Edit", edit_restaurant_path(restaurant) %>
    <%= link_to "Add booking", new_restaurant_booking_path(restaurant) %>
  </div>
<% end %>
