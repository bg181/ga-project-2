<nav class="container navbar navbar-light bg-faded">
  <%= link_to "Prep", root_path, class: "navbar-brand" %>
  <ul class="nav navbar-nav">
    <li class="nav-item">
      <%= link_to "Browse Spaces", restaurants_path, class: "nav-link" %>
    </li>
    <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to "List Spaces", new_restaurant_path, class: "nav-link" %>
    </li>

    <li class="pull-right nav-item dropdown">
      <%= link_to current_user, class: "dropdown-toggle" do %>
        <%= image_tag current_user.image, class: "profile_photo" %> 
      <% end %>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Profile", current_user, class: "nav-link" %></li>
        <li><%= link_to "Edit Account", edit_user_registration_path, class: "nav-link" %></li>
        <% if user_signed_in? %>
          <li class="logout_button">
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
          </li>
        <% else %>
          <li>
            <%= link_to('Login', new_user_session_path)  %>  
          </li>
        <% end %>
      </ul>
    </li>

    <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
      </li>
    <% end %>
  </ul>
</nav>