<li><%= image_tag @restaurant.picture.detail2, class: "gui" %></li>
<%= image_tag @restaurant.user.try(:profile_photos), class: "profile_photo_owner_show" %>
<li class="restaurant_info">
  <div class= "restaurant_info_inside">
    <h2 class ="restaurant_title"><%= @restaurant.name %></h2>
    <p class ="restaurant_show_price">Â£<%= @restaurant.price %></p>
    <p class ="Show bookings"> <%= link_to "Show all bookings", restaurant_bookings_path(@restaurant) %></p>
    <p class="Add button"> <%= link_to "Add booking", new_restaurant_booking_path(@restaurant) %></p>

    <table class="timetable" width="980" style="width:300px;border-width:0px;">
      <tr>
        <td width="109" style="width:93px;border-width:0px;text-align:left;">
          <table style="width:182px; border-width:0px;">
            <tr>
              <td style="width:169px;border-width:0px;">Typical Opening Hours 
                <h5>Our Kitchen is available outside these times</h5></td>
              </tr>
            </table>
            <div class="opening_hours">
            <br>
            <h4 class="days">Monday<br>
              Tuesday<br>
              Wednesday<br>
              Thursday<br>
              Friday<br>
              Saturday</h4>
            </td>
            <td width="179" style="width:104px;border-width:0px;float:left;margin-top: 0px;">
              <table class="hours_table" style="width:104px;border-width:0px;"></table>
              <br>
              <h4 class="times"><%=@restaurant.monday_open.try(:strftime, '%H') %>am - <%=@restaurant.monday_close.try(:strftime, '%H') %>pm<br>
                <%=@restaurant.tuesday_open.try(:strftime, '%H') %>am - <%=@restaurant.tuesday_close.try(:strftime, '%H')%>pm</strong><br>
                <%=@restaurant.wednesday_open.try(:strftime, '%H') %>am - <%=@restaurant.wednesday_close.try(:strftime, '%H') %>pm<br>
                <%=@restaurant.thursday_open.try(:strftime, '%H') %>am - <%=@restaurant.thursday_close.try(:strftime, '%H') %>pm<br>
                <%=@restaurant.friday_open.try(:strftime, '%H') %>am - <%=@restaurant.friday_close.try(:strftime, '%H') %>pm<br>
                <%=@restaurant.saturday_open.try(:strftime, '%H') %>am - <%=@restaurant.saturday_close.try(:strftime, '%H') %>pm<br>
                <%=@restaurant.sunday_open.try(:strftime, '%H') %>am - <%=@restaurant.sunday_close.try(:strftime, '%H') %>pm<br>
              </h4>
        </table>
        <% if current_user %>
        <% if current_user.id == @restaurant.user_id %>
      </div>
      <li><%= image_tag @restaurant.picture_2.detail2, class: "gui2" %></li>
      <p class="Add button"> <%= link_to "Add booking", new_restaurant_booking_path(@restaurant) %></p>
      <p class ="restaurant description"> <%= @restaurant.description %></p>
      <p class= "Delete button"><%= link_to "Delete", restaurant_path(@restaurant), data: { confirm: 'Are you sure?' }, method: :delete %></p>
      <p class= "Edit button"><%= link_to "Edit", edit_restaurant_path(@restaurant) %></p>
    </div>
  </li>
  <% end %>
  <% end %>

  <div id="map"></div>
  <script type="text/javascript">
    var map, marker;
    var latLng = {lat: <%= @restaurant.latitude %>, lng: <%= @restaurant.longitude%>}
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: latLng,
        zoom: 15
      });

      marker = new google.maps.Marker({
          position: latLng,
          map: map
        });
    }
  </script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyClxb-Zn1rpl0SvSeqRNipsFNi_5syF-kQ&callback=initMap">
</script>



